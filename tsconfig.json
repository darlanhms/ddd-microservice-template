// all flags that are related to folders should be declared at the specific service folder
{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6"
        ],
        "strict": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "removeComments": true,
        "noEmitOnError": true,
    }
 }
